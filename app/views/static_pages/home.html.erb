<div class="row">
  <section class="col-md-9">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <%= link_to root_url do %>
            <%= image_tag("vntl.jpg", class: "w-100") %>
          <% end %>
        </div>
        <div class="carousel-item">
          <%= link_to root_url do %>
            <%= image_tag("gglc.jpg", class: "w-100") %>
          <% end %>
        </div>
        <div class="carousel-item">
          <%= link_to root_url do %>
            <%= image_tag("vntl.jpg", class: "w-100") %>
          <% end %>
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only"><%= t ".pre" %></span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only"><%= t ".next" %></span>
      </a>
    </div>
  </section>
  <aside class="col-md-3 hot-music">
    <div class="just-for-u">
      <h5 class="title"><%= t ".for_you" %></h5>
      <%= render "shared/recommend_form" %>
    </div>
  </aside>
</div>

<div class="row mt-4">
  <div class="col-md-9">
    <h3 class="text-white"><%= t ".album" %></h3>
  </div>
  <div class="col-md-3">
    <h3 class="text-white"><%= t ".bxh" %></h3>
  </div>
</div>

<div class="row">
  <div class="col-md-9 list-genres">
    <% @list_genres.each.with_index 0 do |list_genres, index| %>
      <div class="card text-center mb-3 item" >
        <% if index == 0 %>
          <%= link_to genre_path list_genres.id do %>
            <%= image_tag("pop.jpg", class: :avatar) %>
          <% end %>
        <% elsif index == 1 %>
          <%= link_to genre_path list_genres.id do %>
            <%= image_tag("cover.jpg", class: :avatar) %>
          <% end %>
        <% elsif index == 2 %>
          <%= link_to genre_path list_genres.id do %>
            <%= image_tag("rock.jpg", class: :avatar) %>
          <% end %>
        <% elsif index == 3 %>
          <%= link_to genre_path list_genres.id do %>
            <%= image_tag("nhachay.jpg", class: :avatar) %>
          <% end %>
        <% elsif index == 4 %>
          <%= link_to genre_path list_genres.id do %>
            <%= image_tag("muadong.jpg", class: :avatar) %>
          <% end %>
        <% elsif index == 5 %>
          <%= link_to genre_path list_genres.id do %>
            <%= image_tag("bolero.jpg", class: :avatar) %>
          <% end %>
        <% elsif index == 6 %>
          <%= link_to genre_path list_genres.id do %>
            <%= image_tag("duelts.jpg", class: :avatar) %>
          <% end %>
        <% else %>
          <%= link_to genre_path list_genres.id do %>
            <%= image_tag("img-playlist.png", class: :avatar) %>
          <% end %>
        <% end %>
        <div class="card-body">
          <%= link_to list_genres.title, genre_path(list_genres.id), class: "text-white" %>
        </div>
      </div>
    <% end %>
  </div>
  <aside class="col-md-3 hot-music">
    <%= link_to image_tag("hot-music.jpg", alt: (t ".hot_music"), height: 100, width: 260), song_path(@feed_items), class: "pb-3 asb" %>
    <%= link_to image_tag("love-music.jpg", alt: (t ".hot-music"), height: 100, width: 260), song_path(@feed_items), class: "pb-3 asb" %>
    <%= link_to image_tag("vpop-music.jpg", alt: (t ".hot-music"), height: 100, width: 260), song_path(@feed_items), class: "pb-3 asb" %>
    <%= link_to image_tag("acoustic-music.jpg", alt: (t ".hot-music"), height: 100, width: 260), song_path(@feed_items), class: "pb-3 asb" %>
  </aside>
</div>

<div class="row">
  <h3 class="text-white"><%= t ".other" %></h3>
</div>

<div class="row">
  <div class="col-md-9">
    <% @list_genres.each do |list_genres| %>
      <div class="card text-center mb-3" style="width:190px; height: 245px">
        <%= link_to genre_path list_genres.id do %>
          <%= image_tag("best-of-all.jpg", class: "card-img-top") %>
        <% end %>
        <div class="card-body">
          <%= link_to list_genres.title, genre_path(list_genres.id), class: "text-white" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
